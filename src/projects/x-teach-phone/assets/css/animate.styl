.slide-down {
	&-enter-active, &-leave-active {
		transition transform .2s cubic-bezier(1.0, 0.5, 0.8, 1.0)
	}
	&-enter, 	&-leave-to {
		transform translateY(-100%)
	}
}

.scale {
	&-enter-active {
		transition transform .3s cubic-bezier(.63,.22,.46,.74) .1s
	}
	&-leave-active {
		transition opacity .1s
	}
	&-enter {
		transform scale(1.3)
	}
	&-leave-to {
		opacity 0
	}
}

.slide-up {
	&-enter-active {
		transition transform .3s cubic-bezier(.63,.22,.46,.74)
	}
	&-leave-active {}
	&-enter {
		transform translateY(100%)
	}
	&-leave-to {}
}

.fade-out {
	&-enter-active {
		transition transform .2s cubic-bezier(.63,.22,.46,.74)
	}
	&-leave-active {}
	&-enter, &-leave-to {
		opactiy 0
	}
}